<% include ../includes/header.ejs %>

    <!-- FINAL NAV -->
    <div>
      <% if(salvo) { %>
        <%= salvo %>
        <p class="alert alert-success">Foi salvo com sucesso!</p>
      <% } %>
        <div class ="container min-container">
            <h2 class="basic-title">Listagem de livros</h2>
            <div class="well">
                <table class="table table-condensed table-bordered table-striped table-hover">
                    <thead>
                    <tr>
                        <td><a href="">Id</a></td>
                        <td><a href="">Título</a></td>
                        <td><a href="">Preço</a></td>
                        <td><a href="">Descrição</a></td>
                    </tr>
                    </thead>
                    <tbody>
                      <% livros.map(function(livro) { %>
                        <tr>
                            <td><a href="/produtos/detalhe/<%= livro.id %>" class="btn btn-info"><%= livro.id %></a></td>
                            <td><%= livro.titulo %></td>
                            <td><%= livro.preco %></td>
                            <td><p><%= livro.descricao %></p></td>
                        </tr>
                      <% }) %>
                    </tbody>
                </table>
                <a href="/produtos/form" class="btn btn-success"><span class="glyphicon glyphicon-plus-sign"></span> Novo livro</a>
            </div>
        </div>
    </div>

<% include ../includes/footer.ejs %>
