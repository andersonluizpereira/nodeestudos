<% include ../includes/header.ejs %>

<div class ="container min-container">
            <h2 class="basic-title">Listagem de livros</h2>
            <div class="well">
                <table class="table table-condensed table-bordered table-striped table-hover">
                    <thead>
                    <tr>
                        <td><a href="">Id</a></td>
                        <td><a href="">Título</a></td>
                        <td><a href="">Preço</a></td>
                        <td><a href="">Descrição</a></td>
                        <td><a href="">Ações</a></td>
                    </tr>
                    </thead>
                    <tbody>
                      
                        <% livros.map(function(livro) { %>
                        <tr>
                            <td><%= livro.id %></td>
                            <td><%= livro.titulo %></td>
                            <td><%= livro.preco %></td>
                            <td><p><%= livro.descricao %></p></td>
                            <td><a href="/produtos/editar/<%= livro.id %>" class="btn btn-info">Editar</a><a href="/produtos/<%= livro.id %>" class="btn btn-warning">Excluir</a></td>
                        </tr>
                      <% }) %>
                    </tbody>
                      
                    </tbody>
                </table>
                
            </div>
        </div>

<% include ../includes/footer.ejs %>
